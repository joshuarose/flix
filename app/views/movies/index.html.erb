<h1><%= pluralize(@movies.size, 'Movie') %></h1>

<% @movies.each do |movie|  %>
  <article>
    <header>
      <%= link_to movie.title, movie %>
    </header>
    <p>
      <%= truncate(movie.description, length: 35, seperator: ' ') %>
    </p>
    <table>
      <tr>
        <th>
          Released On:
        </th>
        <td>
          <%= movie.released_on %>
        </td>
      </tr>
      <tr>
        <th>
          Rating
        </th>
        <td>
          <%= movie.rating %>
        </td>
      </tr>
      <tr>
        <th>
          Total Gross:
        </th>
        <td>
          <%= number_to_currency(movie.total_gross) %>
        </td>
      </tr>
    </table>
  </article>
<% end %>
