<article>
  <header>
    <h1><%= @movie.title %></h1>
  </header>
  <p>
    <%= @movie.description %>
  </p>
  <h3>Rating</h3>
  <p>
    <%= @movie.rating %>
  </p>
  <h3>Total Gross</h3>
  <p>
    <%= format_total_gross(@movie) %>
  </p>
  <h3>Release Date</h3>
  <p>
    <%= @movie.released_on %>
  </p>

</article>
<%= link_to "All Movies", movies_path %>
